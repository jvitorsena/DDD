{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Api.Application/application.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Api.Application/application.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Api.Application/application.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Data.Testes",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/src/Api.Data.Test/Api.Data.Test.csproj"
            ]
        },
        {
            "label": "Service.Testes",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "--test-adapter-path",
                "${workspaceFolder}/src/Api.Service.Test/Api.Service.Test.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Service.Application",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "--test-adapter-path",
                "${workspaceFolder}/src/Api.Application.Test/Api.Application.Test.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Integration.Testes",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "--test-adapter-path",
                "${workspaceFolder}/src/Api.Integration.Test/Api.Integration.Test.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}